<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>ActorServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.ActorServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PeliculaServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.PeliculaServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DirectorServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.DirectorServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PeliculaActorServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.PeliculaActorServlet
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>RecoveryAddFilmServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.RecoveryAddFilmServlet
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>FillPeliculaActorServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.FillPeliculaActorServlet
		</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>ActorServlet</servlet-name>
		<url-pattern>/actor</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PeliculaServlet</servlet-name>
		<url-pattern>/pelicula</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DirectorServlet</servlet-name>
		<url-pattern>/director</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PeliculaActorServlet</servlet-name>
		<url-pattern>/peliculaactor</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RecoveryAddFilmServlet</servlet-name>
		<url-pattern>/recoveryFilm</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FillPeliculaActorServlet</servlet-name>
		<url-pattern>/fillPeliculaActor</url-pattern>
	</servlet-mapping>



	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
